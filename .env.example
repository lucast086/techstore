# TechStore SaaS Environment Configuration
# Copy this file to .env and update the values

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/techstore_db
DB_HOST=localhost
DB_PORT=5432

# Security Configuration
SECRET_KEY=your-secret-key-here-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-here-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=8
JWT_REFRESH_EXPIRATION_DAYS=30

# Password Security
BCRYPT_ROUNDS=12

# Rate Limiting
LOGIN_RATE_LIMIT_PER_MINUTE=5
LOGIN_RATE_LIMIT_PER_HOUR=20

# Application Settings
APP_NAME="TechStore SaaS"
DEBUG=true
ENVIRONMENT=development

# CORS Configuration
BACKEND_CORS_ORIGINS=["http://localhost:8000","http://127.0.0.1:8000"]

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100