{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "Bash(mkdir:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(ls:*)",
      "Bash(poetry install:*)",
      "Bash(uvicorn:*)",
      "Bash(python:*)",
      "Bash(poetry run ruff:*)",
      "Bash(poetry run pytest:*)",
      "Bash(mv:*)",
      "Bash(poetry run:*)",
      "Bash(./scripts/version.sh:*)",
      "Bash(rm:*)",
      "Bash(touch:*)",
      "Bash(grep:*)",
      "Bash(find:*)",
      "Bash(true)",
      "Bash(curl:*)",
      "Bash(poetry lock:*)",
      "Bash(pip install:*)",
      "WebFetch(domain:docs.anthropic.com)",
      "Bash(claude mcp:*)",
      "WebFetch(domain:github.com)",
      "Bash(cat:*)",
      "WebFetch(domain:api.ref.tools)",
      "WebFetch(domain:ref.tools)",
      "Bash(env)",
      "mcp__Ref__ref_search_documentation",
      "mcp__Ref__ref_read_url",
      "Bash(pipx install:*)",
      "Bash(export PATH=\"$PATH:/home/developer/.local/bin\")",
      "Bash(/home/developer/.local/bin/pipx install semgrep-mcp)",
      "Bash(/home/developer/.local/bin/semgrep-mcp:*)",
      "Bash(semgrep:*)",
      "Bash(/home/developer/.local/bin/semgrep --version)",
      "Bash(export:*)",
      "mcp__ide__getDiagnostics",
      "Bash(pipx list:*)",
      "Bash(/home/developer/.local/bin/pipx uninstall semgrep-mcp)",
      "Bash(for story in 052 053 054 055)",
      "Bash(do echo \"=== STORY-$story ===\")",
      "Bash(done)",
      "Bash(sed:*)",
      "Bash(git checkout:*)",
      "Bash(git stash push:*)"
    ],
    "deny": []
  },
  "enableAllProjectMcpServers": true,
  "enabledMcpjsonServers": ["Ref", "semgrep"]
}
